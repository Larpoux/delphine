{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "env.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@vcl": ["../../src/vcl/index.ts"],
      "@vcl/*": ["../../src/vcl/*"],
      "@drt": ["../../src/drt/index.ts"],
      "@drt/*": ["../../src/drt/*"],
      "@/*": ["./src/*"]
    }
  }
}
